<%- include("../../partials/header") %>
<div class="container">
    <div class="columns is-centered">
        <div class="column is-one-quarter">
            <form method="POST">
                <h1 class="title">Sign Up</h1>
                <div class="field">
                    <label class="label">Email</label>
                    <input required class="input" name="email" placeholder="Email" />
                    <% if(locals.errors) { %>
                      <%- include('../../partials/error', {errors, prop:'email'}) %>
                    <% } %>
                </div>
                <div class="field">
                    <label class="label">Password</label>
                    <input required class="input" name="password" placeholder="Password" type="password" />
                    <% if(locals.errors) { %>
                      <%- include('../../partials/error', {errors, prop:'password'}) %>
                    <% } %>
                </div>
                <div class="field">
                    <label class="label">Confirm Password</label>
                    <input required class="input" name="password2" placeholder="Confirm Passowrd" type="password" />
                    <% if(locals.errors) { %>
                      <%- include('../../partials/error', {errors, prop:'password2'}) %>
                    <% } %>
                </div>
                <button class="button is-primary">Sign Up</button>
            </form>
            <p><a href="/signin">Already have an account? Sign In!</a></p>
            <p><a href="/">Back</a></p>
        </div>
    </div>
</div>
<%- include("../../partials/footer") %>